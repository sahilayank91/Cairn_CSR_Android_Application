<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    android:layout_margin="6dp">

    <LinearLayout
        android:id="@+id/data_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/nandgram_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Nandgram Name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/nandgram_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/dummy_nandgram_address" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray"></View>

        <Button
            android:id="@+id/btn_add_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/add_attendance"
            android:textColor="@color/colorAccent" />

    </LinearLayout>


</android.support.v7.widget.CardView>